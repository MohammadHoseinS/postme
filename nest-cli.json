{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/postme/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": false,
    "tsConfigPath": "apps/postme/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/postme",
  "projects": {
    "notifications": {
      "type": "application",
      "root": "apps/notifications",
      "entryFile": "main",
      "sourceRoot": "apps/notifications/src",
      "compilerOptions": {
        "tsConfigPath": "apps/notifications/tsconfig.app.json"
      }
    },
    "postme": {
      "type": "application",
      "root": "apps/postme",
      "entryFile": "main",
      "sourceRoot": "apps/postme/src",
      "compilerOptions": {
        "tsConfigPath": "apps/postme/tsconfig.app.json",
        "assets": [
          { 
            "include": "assets/i18n/**/*",
            "watchAssets": true 
          }
        ]
      }
    },
    "postme-common": {
      "type": "library",
      "root": "libs/postme-common",
      "entryFile": "index",
      "sourceRoot": "libs/postme-common/src",
      "compilerOptions": {
        "tsConfigPath": "libs/postme-common/tsconfig.lib.json"
      }
    },
    "posts": {
      "type": "application",
      "root": "apps/posts",
      "entryFile": "main",
      "sourceRoot": "apps/posts/src",
      "compilerOptions": {
        "tsConfigPath": "apps/posts/tsconfig.app.json"
      }
    },
    "users": {
      "type": "application",
      "root": "apps/users",
      "entryFile": "main",
      "sourceRoot": "apps/users/src",
      "compilerOptions": {
        "tsConfigPath": "apps/users/tsconfig.app.json"
      }
    }
  }
}